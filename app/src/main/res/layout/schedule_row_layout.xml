<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="automate.capstone.feeder.ViewSchedule">


    <TextView
        android:id="@+id/tv_schedule_name_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/tv_schedule_info_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:layout_below="@+id/tv_schedule_name_recycler"
        android:layout_alignStart="@+id/tv_schedule_name_recycler" />

    <Button
        android:id="@+id/btn_view_sched_info"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_schedule_name_recycler"
        android:layout_marginEnd="41dp"
        android:background="@android:drawable/ic_menu_info_details" />
</RelativeLayout>