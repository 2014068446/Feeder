<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_edit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Set New Date: "/>

    <TextView
        android:id="@+id/tv_edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_edit_date"
        android:text="Set New Time: "
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/tv_edit_date"
        />

    <TextView
        android:layout_below="@id/tv_edit_time"
        android:id="@+id/tv_edit_feed_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set New Feed Amount: "
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/tv_edit_time"/>




    <TextView
        android:layout_toRightOf="@+id/tv_edit_date"
        android:id="@+id/tv_edit_date_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_edit_date"
        android:text="January 1, 2018 Placeholder"/>

    <TextView
        android:layout_alignTop="@+id/tv_edit_time"
        android:layout_toRightOf="@+id/tv_edit_time"
        android:id="@+id/tv_edit_time_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:00AM Placeholder"/>


    <Button
        android:id="@+id/btn_edit_date"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_edit_date_placeholder"
        android:layout_marginEnd="20dp"
        android:background="@android:drawable/ic_menu_my_calendar" />

    <Button
        android:id="@+id/btn_edit_time"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/btn_edit_date"
        android:layout_alignTop="@+id/tv_edit_time_placeholder"
        android:background="@android:drawable/ic_menu_recent_history" />

    <EditText
        android:layout_toRightOf="@+id/tv_edit_feed_amount"
        android:id="@+id/et_edit_feed_amount"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_edit_feed_amount"
        />

    <Spinner
        android:id="@+id/spnr_edit_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_edit_feed_amount"
        android:layout_alignStart="@+id/btn_edit_time"
        android:background="?attr/colorButtonNormal"
        android:entries="@array/measure_key" />

</RelativeLayout>