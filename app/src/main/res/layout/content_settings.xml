<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="automate.capstone.feeder.Settings"
    tools:showIn="@layout/app_bar_settings">


    <!-- text to be displayed whenever current state is checked-->

    <ToggleButton
        android:id="@+id/toggle_notifsms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="ToggleButton"
        android:layout_marginEnd="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toggle_notifsms"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="39dp"
        android:textSize="20sp"
        android:layout_toStartOf="@+id/toggle_notifsms"
        android:text="SMS Notification" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:text="Include:" />

    <CheckBox
        android:id="@+id/cb_sysnotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="System Logs (e.g. Feeding Activities)"
        android:layout_below="@+id/textView4"
        android:onClick="checkBoxNotif"
        android:layout_alignStart="@+id/textView4" />

    <CheckBox
        android:id="@+id/cb_usernotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkBoxNotif"
        android:layout_alignStart="@+id/cb_sysnotif"
        android:layout_below="@+id/cb_sysnotif"
        android:text="User Logs (e.g. Update Schedule)" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cb_usernotif"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:text="Notify Container Status at:" />

    <SeekBar
        android:id="@+id/sb_notif"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="25dp"
        android:max="10"
        android:progress="3"
        android:layout_alignEnd="@+id/cb_usernotif" />

    <TextView
        android:id="@+id/tv_percentage_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sb_notif"
        android:layout_toEndOf="@+id/sb_notif"
        android:text="30%" />

    <Button
        android:id="@+id/btn_submit_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sb_notif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:onClick="saveConfig"
        android:text="Save" />

</RelativeLayout>
