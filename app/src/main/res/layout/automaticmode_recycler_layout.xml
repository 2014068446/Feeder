<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_time_automatic_sched_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:text=""
        android:textColor="@android:color/black"
        tools:text="asdasd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_menu_manage"
        android:layout_alignBottom="@+id/view"
        android:layout_toEndOf="@+id/tv_time_automatic_sched_recycler" />

    <View
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/tv_time_automatic_sched_recycler"
        android:layout_height="1px"
        android:background="@android:color/black"
        android:id="@+id/view" />


</RelativeLayout>